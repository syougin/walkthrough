<mvc:View controllerName="sap.ui.demo.walkthrough.controller.HelloPanel"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
	<Shell>
		<App class="myAppDemoWt">
			<pages>
				<Page title="{i18n>homePageTitle}">
					<content>
						<Panel headerText="{i18n>helloPanelTitle}"
							  class="sapUiResponsiveMargin"
							  width="auto">
							<content>
								<Button 
									text="{i18n>showHelloButtonText}" 
									press=".onShowHello"
									class="sapUiSmallMariginEnd"/>

								<Input 
									value="{/recipient/name}" 
									description="Hello {/recipient/name}" 
									valueLiveUpdate="true" width="60%"/>
									<FormattedText 
										htmlText="Hello {/recipient/name}"
										class="sapUi5SmallMargin sapThemeHighlight-asColor mycustomText"></FormattedText>
								
							</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>